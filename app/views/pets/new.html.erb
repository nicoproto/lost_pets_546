<div class="container col-4 justify-content-center">
  <h1>Add the pet you found</h1>
  <%= simple_form_for @pet do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :species, collection: Pet::SPECIES %>
    <%= f.input :found_at %>

    <%= f.button :submit, class: "btn btn-primary btn-block" %>
  <% end %>
  <%= link_to "Back to list", pets_path, class: "mt-3 d-block" %>
</div>

